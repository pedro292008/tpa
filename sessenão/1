programa {
  funcao inicio() {
    real numero1


    escreva("Digite o numero desejado")
    leia(numero1)


   se (numero1 % 2 == 0 )
      escreva("O número ", numero1, " é PAR.")
   senao
      escreva("O número ", numero1, " é ÍMPAR.")
 
  }
}

