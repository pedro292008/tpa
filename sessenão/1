programa {
  funcao inicio() {
    real salario, valor, limit
    escreva(" Digite o seu salario ")
    leia(salario)


    escreva("valor da prestação ")
    leia(valor)
    limit = salario *0.30


    se (valor <= limit)
    escreva("o emprestimo pode ser realizado")
    senao
    escreva ("o Emprestimo não pode ser realizado")
  }
}
